@model IEnumerable<RolesModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Roles Assign</h3>

    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table class="table table-bordered">
            <tr>
                <th>Roles</th>
                <th>Details</th> 
                <th>Action</th>
            </tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(x => role.Name)

                    </td>

                    <td>
                        @Html.DisplayFor(x=>role.Detail)
                    </td>

                    <td>
                        @Html.ActionLink("Assign Access", "RoleMenuAccess", new { id = role.RoleId })
                    </td>
                </tr>
            }
        </table>
    </div>
    <!-- /.box-body -->

</div>

