@model IEnumerable<RolesModel>
@{
    ViewBag.Title = "Index";
    int i = 1;
}


    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">User Groups/Roles</h3>
            <span class="pull-right">
                <a class="btn btn-primary" href="@Url.Action("Create","Role")"><i class="fa fa-plus"></i> Add New</a>
            </span>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table class="table table-bordered">
                <tr>
                    <th style="width: 10px">S.N.</th>
                    <th>Name</th>
                    <th>Detail</th>
                    <th style="width: 150px;">Action</th>
                </tr>
                @foreach (var role in Model)
                {
                  <tr>
                      <td>
                          @Html.DisplayFor(x => i)

                      </td>

                    <td>
                        @Html.DisplayFor(x => role.Name)

                    </td>
                      <td>
                          @Html.DisplayFor(x => role.Detail)
                      </td>
                      <td>
                       <a href="@Url.Action("Update","Role", new { id = role.RoleId })" class="btn btn-primary"><i class="fa fa-pencil-square-o pull-left"></i></a>
                       <a href="@Url.Action("Delete","Role", new { id = role.RoleId })" class="btn btn-primary del"><i class="fa fa-trash-o pull-left"></i></a>
                      </td>
                  </tr>
                    i++;
                }
            </table>
        </div>
        <!-- /.box-body -->
   
    </div>
@section scripts{
    
    <script>
        $(document).ready(function () {

            $(".del").click(function () {

                if (confirm("Are you sure you want to delete the role?")) {
                    return true;
                }
                else {
                    return false;
                }
            });
          
        });

    </script>
    }