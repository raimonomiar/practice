@model IEnumerable<ColourModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 1;
}
<div class="row">
    <div class="col-md-8">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Colours</h3>
                <span class="pull-right">
                    <a class="btn btn-primary" href="@Url.Action("Create","Colour")"><i class="fa fa-plus"></i> Add New</a>
                </span>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table table-bordered">
                    <tr>
                        <th style="width: 10px">S.N.</th>
                        <th>Name</th>
                        <th style="width: 150px;">Action</th>
                    </tr>
                    @foreach (var colour in Model)
                    {
                        
                        <tr>
                            <td>
                                @Html.DisplayFor(x => i)

                            </td>

                            <td>
                                @Html.DisplayFor(x => colour.ColourName)

                            </td>
                            <td>
                                <a href="@Url.Action("Edit","Colour", new { id = colour.id })" class="btn btn-primary"><i class="fa fa-pencil-square-o pull-left"></i></a>
                                <a href="@Url.Action("Delete","Colour", new { id = colour.id })" class="btn btn-primary del"><i class="fa fa-trash-o pull-left"></i></a>
                            </td>
                        </tr>
                        i++;
                    }
                </table>
            </div>
            <!-- /.box-body -->

        </div>
    </div>


    
</div>

@section scripts{
@Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {

            $(".del").click(function () {

                if (confirm("Are you sure you want to delete the role?")) {
                    return true;
                }
                else {
                    return false;
                }
            });

        

        });

    </script>
}

