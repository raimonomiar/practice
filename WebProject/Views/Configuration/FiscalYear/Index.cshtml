@model IEnumerable<FiscalYearModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 1;
}
<div class="row">
    <div class="col-md-8">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Fiscal Years</h3>
                <span class="pull-right">
                    <a class="btn btn-primary" href="@Url.Action("Create","Fiscal")"><i class="fa fa-plus"></i> Add New</a>
                </span>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table table-bordered">
                    <tr>
                        <th style="width: 10px">S.N.</th>
                        <th>@Html.DisplayNameFor(x => x.FiscalYearName)</th>
                        <th>@Html.DisplayNameFor(x => x.StartDate)</th>
                        <th>@Html.DisplayNameFor(x => x.EndDate)</th>
                        <th>@Html.DisplayNameFor(x=>x.CurrentFiscalYear)</th>
                        <th style="width: 150px;">Action</th>
                    </tr>
                    @foreach (var fiscal in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(x => i)

                            </td>
                            <td>
                                @Html.DisplayFor(x => fiscal.FiscalYearName)

                            </td>
                            <td>
                                @Html.DisplayFor(x => fiscal.StartDate)

                            </td>

                            <td>
                                @Html.DisplayFor(x => fiscal.EndDate)
                            </td>
                            <td>
                                @if (fiscal.CurrentFiscalYear == true)
                                {
                                    <span class="label label-success">Yes</span>

                                }
                                else
                                {
                                    <span class="label label-warning">No</span>
                                }

                            </td>
<td>
                                <a href="@Url.Action("Edit","Fiscal", new { id = fiscal.Id})" class="btn btn-primary"><i class="fa fa-pencil-square-o pull-left"></i></a>
                                <a href="@Url.Action("Delete","Fiscal", new { id = fiscal.Id })" class="btn btn-primary del"><i class="fa fa-trash-o pull-left"></i></a>
                            </td>
                        </tr>
                        i++;
                    }
                </table>
            </div>
            <!-- /.box-body -->

        </div>
    </div>



</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {

            $(".del").click(function () {

                if (confirm("Are you sure you want to delete the role?")) {
                    return true;
                }
                else {
                    return false;
                }
            });



        });

    </script>
}
