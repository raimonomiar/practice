@model MunicipalityModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-6">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Add Municipality</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="box-body">
                <div class="form-group">
                    @Html.LabelFor(x =>x.DisId, new { @class = "control-label" })

                    @Html.DropDownListFor(x => x.DisId, Model.DistrictList, "Choose District --", htmlAttributes: new { @class = "form-control select2" })

                    @Html.ValidationMessageFor(x => x.DisId, null, new { @class = "text-red" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.MuniTypeId, new { @class = "control-label" })

                    @Html.DropDownListFor(x => x.MuniTypeId, Model.MunicipalityTypeList, "Choose Municipality Type--", htmlAttributes: new { @class = "form-control" })

                    @Html.ValidationMessageFor(x => x.MuniTypeId, null, new { @class = "text-red" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.MunicipalityName, new { @class = "control-label" })

                    @Html.TextBoxFor(x => x.MunicipalityName, new { @class = "form-control" })

                    @Html.ValidationMessageFor(x => x.MunicipalityName, null, new { @class = "text-red" })

                </div>

            </div>
            <div class="box-footer">
                <a href="@Url.Action("Index","Municipality")" class="btn btn-default">Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Create</button>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
