@model IEnumerable<OfficeModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 1;
}
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Offices</h3>
        <span class="pull-right">
            <a class="btn btn-primary" href="@Url.Action("Create","Office")"><i class="fa fa-plus"></i> Add New</a>
        </span>
    </div>
    <div class="box-body">

        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">S.N.</th>
                    <th>@Html.DisplayNameFor(x =>x.OfficeName)</th>
                    <th>@Html.DisplayNameFor(x => x.OfficeType.OfficeTypeName)</th>
                    <th>@Html.DisplayNameFor(x => x.OfficeAddress)</th>
                    <th>@Html.DisplayNameFor(x => x.OfficePhone)</th>
                    <th>@Html.DisplayNameFor(x => x.OfficeEmail)</th>
                    <th style="width: 150px;">Action</th>

                </tr>


            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => i)</td>

                        <td>@Html.DisplayFor(x => item.OfficeName)</td>

                        <td>@Html.DisplayFor(x => item.OfficeTypeName)</td>

                        <td>@Html.DisplayFor(x => item.OfficeAddress)</td>

                        <td>@Html.DisplayFor(x => item.OfficePhone)</td>

                        <td>@Html.DisplayFor(x => item.OfficeEmail)</td>

                        <td>

                            <a href="@Url.Action("Edit","Office", new { id = item.Id})" class="btn btn-primary"><i class="fa fa-pencil-square-o pull-left"></i></a>
                            <a href="@Url.Action("Details","Office", new {id = item.Id})" class="btn btn-primary"><i class="fa fa-eye pull-left"></i></a>
                            <a href="@Url.Action("Delete","Office", new { id = item.Id })" class="btn btn-primary del"><i class="fa fa-trash-o pull-left"></i></a>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>





    </div>

</div>
@section scripts{

    <script>
        $(document).ready(function () {

            $(".del").click(function () {

                if (confirm("Are you sure you want to delete the role?")) {
                    return true;
                }
                else {
                    return false;
                }
            });

        });

    </script>
}